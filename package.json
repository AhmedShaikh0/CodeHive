{
  "name": "codehive",
  "version": "1.0.0",
  "description": "A desktop app to use Claude, ChatGPT, and Grok side-by-side",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:linux": "electron-builder --linux",
    "dist:win": "electron-builder --win",
    "build": "electron-builder --linux AppImage"
  },
  "keywords": [
    "electron",
    "ai",
    "claude",
    "chatgpt",
    "grok"
  ],
  "author": "CodeHive Developer",
  "license": "MIT",
  "build": {
    "appId": "com.developer.codehive",
    "productName": "CodeHive",
    "directories": {
      "output": "dist"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility",
      "icon": "build/icon.png"
    },
    "win": {
      "target": [
        "NSIS"
      ],
      "icon": "build/icon.png"
    }
  },
  "devDependencies": {
    "electron": "30.0.0",
    "electron-builder": "^24.0.0"
  }
}
